{{#if resume.work}}
<section id= "work">
	<h2><i class= "fa fa-suitcase left"></i> WORK EXPERIENCE</h2>
	{{#each resume.work}}
		<div class= "job">
			<h3>{{position}}, {{company}}</h3>
      <p class="work-description">{{description}}</p>
			<h4>{{startDate}} {{#if endDate}}
			<span class="endDate">
				- {{endDate}}
			</span>
			{{else}}
			<span class="endDate">
				- Present
			</span>
			{{/if}}</h4>
			{{paragraphSplit summary}}
			{{#if highlights.length}}
			<h4>HIGHLIGHTS</h4>
			<ul class="highlights">
				{{#each highlights}}
				<li>{{.}}</li>
				{{/each}}
			</ul>
			{{/if}}
		</div>
	{{/each}}
</section>
{{/if}}
